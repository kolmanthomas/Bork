{
	"version": 3,
	"configurePresets": [{
		"name": "debug",
		"displayName": "Default Debugging Configuration",
		"binaryDir": "${sourceDir}/build/debug",
		"cacheVariables": {
			"CMAKE_BUILD_TYPE": {
				"type": "STRING",
				"value": "Debug"
			},
			"CMAKE_EXPORT_COMPILE_COMMANDS": {
				"type": "BOOL",
				"value": "ON"
			},
			"CMAKE_CXX_FLAGS": {
				"type": "STRING",
				"value": "-O0 -g -Wall -Wextra -Wno-unused-parameter"
			}
		}
	}, {
		"name": "release",
		"displayName": "Default Release Configuration",
		"binaryDir": "${sourceDir}/build/release",
		"cacheVariables": {
			"CMAKE_BUILD_TYPE": {
				"type": "STRING",
				"value": "Release"
			},
			"CMAKE_EXPORT_COMPILE_COMMANDS": {
				"type": "BOOL",
				"value": "OFF"
			},
			"CMAKE_CXX_FLAGS": {
				"type": "STRING",
				"value": "-O3"
			}
		}	
	}]

}
